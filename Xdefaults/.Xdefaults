! Comments should be "!"
! validate the config: xrdb ~/.Xdefaults; xrdb -query
!
! Note: wildcarding matches arent globs see: https://wiki.archlinux.org/title/x_resources#Wildcard_matching

Xcursor.size: 24

! universal matches
*background: #000000
*foreground: #ffffff
?.vt100.faceName: xft:Ubuntu Mono:size=16:antialias=true
?.vt100.font: 7x13
*selectToClipboard: true

!*Translations: #override \
!                 Ctrl Shift <Key>V:    insert-selection(SELECT) \n\
!                 Ctrl Shift <Key>C:    copy-selection(SELECT)


! urxvt matches
URxvt*background: #000000
URxvt*foreground: #ffffff
URxvt.font:     xft:Ubuntu Mono:size=16:antialias=true
URxvt.boldFont: xft:Ubuntu Mono:bold:size=16:antialias=true
URxvt*urlLauncher:         firefox
URxvt*scrollBar:        false
URxvt*scrollBar_right:        true
URxvt*scrollColor:        #000000
URxvt.termName: rxvt-unicode-256color
URxvt.color12: rgb:5c/5c/ff
